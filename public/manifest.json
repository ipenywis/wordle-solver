{
  "manifest_version": 2,
  "name": "Wordle AI Player",
  "version": "0.1.0",
  "description": "AI Player to Solve Any Wordle!",
  "icons": {
    "16": "icons/favicon16.png",
    "32": "icons/favicon32.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Wordle AI Player",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://www.powerlanguage.co.uk/wordle/*"],
      "run_at": "document_idle",
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": ["words.txt"]
}
